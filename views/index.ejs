<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern UI</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 text-gray-100">
    <div class="flex flex-col lg:flex-row w-full h-screen">
        <!-- Registration Section -->
        <div class="flex items-center justify-center w-full lg:w-1/2 bg-white text-gray-900 p-8 lg:p-20">
            <div class="w-full max-w-md">
                <h3 class="text-4xl font-bold mb-2">Welcome to <span class="text-blue-500">Scatch</span></h3>
                <h4 class="text-lg text-gray-600 mb-6">Create your account</h4>
                <form autocomplete="off" action="/register" method="post" class="space-y-4">
                    <input
                        class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                        type="text" placeholder="Full Name" name="fullname">
                    <input
                        class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                        type="email" placeholder="Email" name="email">
                    <input
                        class="w-full px-4 py-3 bg-gray-100 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                        type="text" placeholder="Password" name="password">
                    <input
                        class="w-full px-4 py-3 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition"
                        type="submit" value="Create My Account">
                </form>
            </div>
        </div>

        <!-- Login Section -->
        <div class="flex items-center justify-center w-full lg:w-1/2 bg-gradient-to-tl from-gray-900 via-gray-800 to-gray-900 text-gray-100 p-8 lg:p-20">
            <div class="w-full max-w-md">
                <h4 class="text-2xl font-semibold mb-6">Log in to your account</h4>
                <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                    <input
                        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                        type="email" placeholder="Email" name="email">
                    <input
                        class="w-full px-4 py-3 bg-gray-800 border border-gray-700 rounded-lg text-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent"
                        type="password" placeholder="Password" name="password">
                    <input
                        class="w-full px-4 py-3 bg-blue-500 text-white font-semibold rounded-lg hover:bg-blue-600 transition"
                        type="submit" value="Login">
                </form>
            </div>
        </div>
    </div>
</body>
</html>
